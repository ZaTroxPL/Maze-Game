{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON file format",

  "type": "object",

  "properties": {
    "Treasures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": { "type": "string" },
          "GainWealth": { "type": "integer" }          
        }
      }
    },
    "Threats": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": { "type": "string" },
          "WealthOpportunity": { "type": "integer" },
          "Action": {
            "type": "object",
            "properties": {
              "Name": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
